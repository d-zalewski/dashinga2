<% content_for :title do %>Icinga 2 Dashboard<% end %>
<div class="gridster">
   <ul>
    <!-- Stats -->

    <li data-row="1" data-col="5" data-sizex="1" data-sizey="1">
      <div id="uptimetextsize" data-id="icinga-uptime" data-view="Simplemon" data-title="Uptime"></div>
    </li>
	
<!---
Uncomment this one if you want latency displayed

    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="icinga-latency" data-view="Simplemon" data-title="Latency"></div>
    </li>
--->
    <li data-row="2" data-col="5" data-sizex="1" data-sizey="1">
      <div id="executiontimesize" data-id="icinga-execution-time" data-view="Simplemon" data-title="Execution Time"></div>
    </li>

    <!-- Down, Critical, Warning -->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="icinga-overview" data-view="Simplemon" data-title="Overview"></div>
    </li>
    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="icinga-host-down" data-view="Simplemon" data-title="Hosts Down"></div>
    </li>
    <li data-row="1" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="icinga-service-critical" data-view="Simplemon" data-title="Services Critical"></div>
    </li>
    <li data-row="1" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="icinga-service-warning" data-view="Simplemon" data-title="Services Warning"></div>
    </li>

	<!-- Host and Service Problems-->
	
	<li data-row="2" data-col="1" data-sizex="2" data-sizey="2">
       <div data-id="hostproblems" data-view="hostproblems" data-title="Host Problems" data-moreinfo=""></div>
	</li>
	<li data-row="2" data-col="3" data-sizex="2" data-sizey="2">
       <div data-id="serviceproblems" data-view="serviceproblems" data-title="Service Problems" data-moreinfo=""></div>
	</li>
	
	<!-- Cacti list -->
	
	<li data-row="3" data-col="5" data-sizex="1" data-sizey="1">
      <div data-id="cacti" data-view="cacti" data-unordered="true" data-title="Cacti" data-moreinfo=""></div>
    </li>
	
	<!-- Oxidized list -->
	
	<li data-row="4" data-col="5" data-sizex="1" data-sizey="1">
      <div data-id="oxidized" data-view="oxidized" data-unordered="true" data-title="Oxidized Backups" data-moreinfo=""></div>
    </li>
	
   <!-- Downtime -->
	
    <li data-row="4" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="icinga-host-downtime" data-view="Simplemon" data-title="Hosts in Downtime"></div>
    </li>
    <li data-row="4" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="icinga-service-downtime" data-view="Simplemon" data-title="Services in Downtime"></div>
    </li>
	
    <!-- Acknowledged -->
	
    <li data-row="4" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="icinga-host-ack" data-view="Simplemon" data-title="Hosts Acknowledged"></div>
    </li>
    <li data-row="4" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="icinga-service-ack" data-view="Simplemon" data-title="Services Acknowledged"></div>
    </li>
	
 
  
	<!-- BigImage -->
	
	<li id="imagepadding" data-row="1" data-col="6" data-sizex="4" data-sizey="4">
		<div  data-id="logo" data-view="Image" data-image="http://192.168.200.40/cacti/plugins/weathermap/output/11.png"></div>
	</li>

	

  </ul>
</div>
